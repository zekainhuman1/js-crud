<main class="main">
    {{#with data}}
    <form method="post" action="/purchase-edit-submit?id={{id}}" class="form-card">
        {{> heading/index title='Зміна данних'}}
        <div class="prchas-info__block">
            {{> info/index title="ID:" value=id }}

        </div>
        {{> divider/index}}


        {{> field/index label="Ім'я" name='firstname' value=firstname}}

        {{> field/index label='Прізвище' name='lastname' value=lastname}}

        {{> field/index label='Телефон' name='phone' value=phone}}

        {{> field/index label='Пошта' name='email' value=email}}


        {{> divider/index}}


        {{> button/index text="Змінити данні"}}

    </form>
    {{/with}}
</main>