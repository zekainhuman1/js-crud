{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}
<main>
  <section>
    <h1 class="title">Редагування товару</h1>

    <div class="form">
      <h2 class="form__title">Інформація про товар</h2>
      <form method="POST" action="/product-update">
        <div class="form__content">
          <div class="form__field">
            <label for="name" class="form__label">Назва товару:</label>
            <input type="text" name="name" class="form__input" value={{product.name}}>
          </div>

          <div class="form__field">
            <label for="price" class="form__label">Ціна:</label>
            <input type="text" name="price" class="form__input" value={{product.price}}>
          </div>

          <div class="form__field">
            <label for="id" class="form__label">ID:</label>
            <input style="background-color: grey;" type="text" name="id" class="form__input" value={{product.id}}
              readonly>
          </div>

          <div class="form__field">
            <label for="description" class="form__label">Короткий опис:</label>
            <textarea type="text" name="description" class="form__input">{{product.description}}</textarea>
            <label for="description" class="form__label--comment">Відображається у картці товару</label>
          </div>
          <button class="form__button">Зберегти оновлення</button>
          <a href="/product-delete?id={{product.id}}" class="form__button">
            Видалити товар
          </a>
          {{!-- <button class="form__button">Видалити товар</button> --}}

        </div>
      </form>
    </div>

  </section>

</main>


